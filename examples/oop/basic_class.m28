(print "Testing basic class definition...")

; Define a simple class without methods first
(class SimpleClass ())
(print "Class defined:" SimpleClass)

; Create an instance
(def obj (SimpleClass))
(print "Instance created:" obj)

; Define a class with a method
(class Greeter ()
  (def greet (self name)
    (print (format "Hello, %s!" name))))

(print "\nGreeter class:" Greeter)
(def g (Greeter))
(print "Greeter instance:" g)

; Call the method
((. g greet) "World")