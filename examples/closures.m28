(define make-counter
  (lambda ()
    (let ((count 0))
      (lambda ()
        (set! count (+ count 1))
        count))))

(define counter1 (make-counter))
(define counter2 (make-counter))

(print "Counter 1:")
(print (counter1))
(print (counter1))
(print (counter1))

(print "Counter 2:")
(print (counter2))
(print (counter2))

(print "Counter 1 again:")
(print (counter1))
