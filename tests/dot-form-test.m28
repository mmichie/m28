# Test the dot special form directly

# Create a test dictionary
(= person (dict "name" "John" "age" 30))
# Add a method to the dictionary  
(dict.update person (dict "greet" (lambda (self message) (+ "Hello " (get self "name") ", " message))))

# Test property access with get function
(print "Property access with get:")
(print (get person "name"))
(print "Expected: John")

# Test property access with dot special form
(print "\nProperty access with dot special form:")
(print (dot person "name"))
(print "Expected: John")

# Test method call with dot special form
(print "\nMethod call with dot special form:")
(print (dot person "greet" "welcome!"))
(print "Expected: Hello John, welcome!")