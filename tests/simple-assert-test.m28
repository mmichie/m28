;; Simple test with assert
(def (assert condition message)
  (if (not condition)
      (begin
        (print (+ "FAIL: " message))
        False)
      (begin
        (print (+ "PASS: " message))
        True)))

(print "\n===== Running Arithmetic Tests =====")
(print (assert (== (+ 1 2) 3) "Addition test"))
(print (assert (== (- 5 3) 2) "Subtraction test"))
(print (assert (== (* 2 3) 6) "Multiplication test"))
(print (assert (== (/ 6 2) 3) "Division test"))
(print "===== Tests Complete =====")