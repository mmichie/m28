; Simple test for loop forms

; Test while loop
(print "Testing while loop...")

(def i 0)
(while (< i 5)
  (print "i =" i)
  (= i (+ i 1)))
  
(print "After loop, i =" i)

; Test break
(print "Testing break...")

(def j 0)
(while true
  (print "j =" j)
  (= j (+ j 1))
  (if (>= j 3)
    (break)))
    
(print "After break, j =" j)

; Test continue
(print "Testing continue...")

(def k 0)
(def seen 0)
(while (< k 5)
  (= k (+ k 1))
  ; Skip odd numbers (1, 3, 5)
  (if (= k 1) (continue))
  (if (= k 3) (continue))
  (if (= k 5) (continue))
  (= seen (+ seen 1))
  (print "Saw value k =" k))
    
(print "After continue loop, saw" seen "even values")